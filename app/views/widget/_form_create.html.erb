<%= form_for :create, url: :widget_create do |f| %>
  <p><%= f.label :name %>: <%= f.text_field :name %></p>
  <p><%= f.label :description %>: <%= f.text_area :description %></p>
  <p><%= f.label :kind %>
    : <%= f.select(:kind, options_for_select([['visible', 'visible'], ['hidden', 'hidden']])) %></p>
  <p><%= f.submit("submit") %></p>
<% end %>